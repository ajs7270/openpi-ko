{
    "name": "openpi",
    "dockerComposeFile": ["../scripts/docker/compose.yml"],
    "service": "openpi_train",
    "workspaceFolder": "/app",
    "shutdownAction": "none",
    "customizations": {
        "vscode": {
            "extensions": ["ms-python.python"],
            "settings": {
                "python.defaultInterpreterPath": "/.venv/bin/python",
                "python.terminal.activateEnvironment": true,
                "python.venvPath": "/.venv"
            }
        }
    }
}
